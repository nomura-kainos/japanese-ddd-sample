<?xml version="1.0"?>
<ruleset name="KainosCustom">
    <description>カイノス コーディングスタイル</description>
    <!-- 設定オプションの詳細、https://pear.plus-server.net/package.php.php-codesniffer.advanced-usage.html　-->
    <arg name="tab-width" value="4"/><!--インデントでタブも使用して良いように設定-->
    <arg name="colors"/><!--結果出力に色を付ける-->
    <arg value="p"/><!--進捗表示-->

    <rule ref="PSR12">
        <exclude name="PSR1.Methods.CamelCapsMethodName.NotCamelCaps"/><!--キャメルケースか-->
        <exclude name="PSR1.Classes.ClassDeclaration.MultipleClasses"/><!--ファイル内に複数クラスの宣言不可か-->
        <exclude name="Squiz.Classes.ValidClassName"/><!--単語の先頭文字を大文字で表記する記法か-->
    </rule>

</ruleset>
